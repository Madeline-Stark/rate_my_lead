<div class="teacher_info-container">
    <h1><%= @teacher.name %></h1>
    <%= image_tag @teacher.profile_picture.variant(resize_to_limit: [100, 100]) if @teacher.profile_picture.attached? %>
    <h3><%= "No Image Uploaded" if !@teacher.profile_picture.attached? %></h3>
    <h3>from <%= @teacher.location %></h3>
    <h3>Average rating: <%= @teacher.reviews.average_rating %></h3>
    <%= link_to("Reviews for #{@teacher.name}", teacher_reviews_path(@teacher)) %>
    <%= link_to("Write a Review for #{@teacher.name}", new_teacher_review_path(@teacher)) %>
</div>



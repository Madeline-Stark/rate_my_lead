<div class="signup-container">
    <h1>Sign Up Here</h1>

    <%= render partial: '/shared/errors', locals: { object: @user} %>

    <%= form_with(model: @user, url:'/signup', local: true, class: "signup-form" )do |f|%>
        <%= f.label :username %>
        <%= f.text_field :username %>
        <%= f.label :email %>
        <%= f.email_field :email %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.submit "Sign Up", class: "submit" %>
    <% end %>
</div>
